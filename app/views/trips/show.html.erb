<%= render 'map' %>
<ul>
  <% @sub_routes.each do |sub_route| %>
    <li>
      <%= (Waypoint.find(sub_route.origin_waypoint_id)).address %>
      <br>
      <%= (Waypoint.find(sub_route.destination_waypoint_id)).address %>
      <br>
      <%= sub_route.duration %>
    </li>
  <% end %>
</ul>
<h3>Total Trip Time: <%= distance_of_time(@route.total_time) %></h3>
<script type="text/javascript">
  var subResponse = <%= @sub_routes.first.google_results.to_s.html_safe %>;
  $(document).ready(calcRoute();); 
</script>



