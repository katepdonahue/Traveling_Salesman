<form action="/trips/<%= @trip.id %>" method="POST">
  <fieldset>
    <li>
      <label>Start</label>
      <input id="trip_waypoints_name" name="trip[waypoints][][name]" type="hidden" value="start"></li>
    <li>
      <label>Latitude</label>
      <input id="trip_waypoints_latitude" name="trip[waypoints][][latitude]" size="30" type="text">
    </li>
    <li>
      <label>Longitude</label>
      <input id="trip_waypoints_longitude" name="trip[waypoints][][longitude]" size="30" type="text">
    </li>
  </fieldset>
  <fieldset>
    <li>
      <label>End</label>
      <input id="trip_waypoints_name" name="trip[waypoints][][name]" type="hidden" value="end"></li>
    <li>
      <label>Latitude</label>
      <input id="trip_waypoints_latitude" name="trip[waypoints][][latitude]" size="30" type="text">
    </li>
    <li>
      <label>Longitude</label>
      <input id="trip_waypoints_longitude" name="trip[waypoints][][longitude]" size="30" type="text">
    </li>
  </fieldset>

  <input type="submit"/>
</form>
